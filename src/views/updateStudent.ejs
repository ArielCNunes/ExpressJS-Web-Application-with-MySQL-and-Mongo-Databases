<!DOCTYPE html>
<html>
  <head>
    <title>Update Student</title>
  </head>
  <body>
    <h1>Update Student</h1>

    <!-- Error Message -->
    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>

    <!-- Update Form -->
    <form action="/students/edit/<%= student.sid %>" method="POST">
      <input type="hidden" name="sid" value="<%= student.sid %>" />
      <label for="sid">Student ID:</label>
      <input
        type="text"
        id="sid"
        name="sid_readonly"
        value="<%= student.sid %>"
        placeholder="801-321-9876"
        readonly
      /><br /><br />

      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= student.name %>"
        required
      /><br /><br />

      <label for="age">Age:</label>
      <input
        type="number"
        id="age"
        name="age"
        value="<%= student.age %>"
        required
      /><br /><br />

      <button type="submit">Update</button>
    </form>

    <br />
  </body>
</html>
